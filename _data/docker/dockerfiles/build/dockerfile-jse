FROM maven:3.8.1-adoptopenjdk-8 as build
WORKDIR /nabhi-backend
COPY . .
WORKDIR /nabhi-backend
RUN mvn -am -pl nabhi-jse install -DskipTests=true -Pdq

FROM openjdk:8-jdk-alpine
ARG JAR_FILE=/nabhi-backend/nabhi-jse/target/jse.jar
COPY --from=build ${JAR_FILE} jse.jar
ENTRYPOINT ["java","-jar","/jse.jar"]